extend layout

block content
    link(rel="stylesheet", href="/css/free3.css")
    script(src="/js/detail.js") 
    h2.free 게시글 보기
      main
        .write
          input(type='text' readonly name="title" required='' value=`${book.title}`)
          hr
          textarea.text(name="content" readonly)=`${book.content}`
          div.free
            div.user
                input(type="text" name="author" readonly value=`${book.author}`)
            div.freebutton(data-author=`${book.author}`)
                button.update(data-author=`${book.author}`) 수정
                button.delete(data-author=`${book.author}`) 삭제
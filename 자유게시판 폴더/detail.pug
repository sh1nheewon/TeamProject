extend ../../layout

block content
    link(rel="stylesheet", href="/css/free2.css")
    script(src="/js/detail.js") 
    h2.free 게시글 보기
      main
        form.write(method="POST")
          input(type='text' readonly name="title" required='' value=`${bd.title}`)
          hr
          if bd.image_name
            div.image
              img(src=`/uploads/${bd.image_name}`,width="300px", alt=`${bd.image_origin_name}`)
            textarea.imgtext(name="content" readonly)=bd.content
          else
            textarea.text(name="content" readonly)=bd.content
          div.free
            div.user
                input.author(type="text" name="author" value=`${bd.author}` readonly )
                input.password(type="password" name='password' placeholder='PASSWORD')
            div.freebutton(data-num=`${bd.num}`)
              input.btn.update(type="button" data-num=`${bd.num}` value="수정") 
              input.btn.delete(type="button" data-num=`${bd.num}` value="삭제")
              input.btn.btn_list(type="button", value="돌아가기")

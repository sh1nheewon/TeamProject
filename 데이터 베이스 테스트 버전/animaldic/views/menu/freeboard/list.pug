extends freeboard

block list_content
  link(rel="stylesheet", href="/css/free.css")
  script(src="/js/list.js") 
  table.list
    thead 
      tr
        th
          strong  No. 
        th
          strong  제목
        th
          strong  글쓴이
    tbody
      each bd,index in BBD
        tr(data-num=`${bd.num}`) 
          td #{index+1}
          td= bd.title
          td= bd.author 
